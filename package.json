{
  "name": "hackjs",
  "version": "1.0.0",
  "description": "An implementation of the Hack computer, based on nand2tetris",
  "private": true,
  "scripts": {
    "test": "nyc mocha -r ts-node/register src/**/*.spec.ts src/*.spec.ts",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.7.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ]
  }
}
