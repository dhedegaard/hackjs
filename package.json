{
  "name": "hackjs",
  "version": "1.0.0",
  "description": "An implementation of the Hack computer, based on nand2tetris",
  "private": true,
  "scripts": {
    "test": "jest --watch",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "tsc"
  },
  "dependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.19",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.0.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
